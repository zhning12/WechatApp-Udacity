/* width 750rpx, height 760rpx
760 = 20+154+280+56+250 */
.wrapper {
  position: relative;
  padding-top: 20rpx;
  padding-bottom:250rpx;

}

/* height: 154rpx
154 = 42 + 10 + 42 + 60 */
.location-wrapper{
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0,0,0,0.5)
}

.location{
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}
.location-tips{
  margin-top:10rpx;
  text-align: center;
  height: 42rpx;
}

.temperature {
  text-align: center;
  font-size: 200rpx;
  /* 行高通常设置为字体的1.4倍，保证上下有空隙 */
  line-height: 280rpx;
  /* 加上透明度使得更好看 */
  opacity: 0.8;
}

.description {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.background-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}

.timetips-icon {
  margin-right: 10rpx;
  height: 36rpx;
  width: 28rpx;
}

.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.forecast-list {
  display: flex;
  align-items: center;
}

.forecast-item {
  display: flex;
  flex-direction: column;
  flex: none;
  width: 120rpx;
  font-size: 36rpx;
  line-height: 42rpx;
	align-items: center;
}

.forecast-item:child {
  width: 60rpx;
  height: 60rpx;
}

.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-weather {
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-temp {
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}

.day-weather{
	display: flex;
	align-items: center;
	position: absolute;
	bottom: 0;
	left: 40rpx;
	right:40rpx;
	height: 90rpx;
	border-top: 1px solid rgba(0,0,0,0.1);
	font-size: 30rpx;
	line-height: 42rpx;
	opacity: 0.5;
}

.temp-text{
	flex-grow: 1;
	padding-right: 30rpx;
	text-align: right;
}

.arrow-icon{
	width:13rpx;
	height: 24rpx;
}

